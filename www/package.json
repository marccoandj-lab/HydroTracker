{
  "name": "hydrotracker-water-tracker",
  "version": "1.0.0",
  "description": "Modern water consumption tracking mobile application",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "build": "npm run copy && echo Build complete in android/app/src/main/assets/public",
    "copy": "rm -rf android/app/src/main/assets/public && cp -r . android/app/src/main/assets/public",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:open": "open android",
    "cap:init": "npx cap init HydroTracker com.hydrotracker.app --web-dir .",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "build:android": "npm run copy && cd android && ./gradlew assembleDebug",
    "deploy": "echo Ready for deployment - see README.md for instructions"
  },
  "keywords": [
    "water",
    "tracker",
    "hydration",
    "health",
    "wellness"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/push-notifications": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "serve": "^14.2.0"
  }
}
